{
  "name": "symph-projects",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "description": "React SPA applications, inspiration comes from Next.js and Dva",
  "license": "MIT",
  "repository": "https://github.com/lnlfps/symph-joy",
  "bugs": "",
  "homepage": "https://lnlfps.github.io/symph-joy",
  "scripts": {
    "lerna": "lerna",
    "dev": "lerna run build --stream --parallel",
    "testonly": "jest",
    "testall": "yarn run testonly -- --ci --reporters=default --reporters=jest-junit --forceExit --runInBand",
    "pretest": "yarn run lint",
    "test": "yarn run testall",
    "lint": "lerna run typescript && standard && standard --parser typescript-eslint-parser --plugin typescript \"packages/**/*.ts\"",
    "lint-fix": "standard --fix && standard --fix --parser typescript-eslint-parser --plugin typescript \"packages/**/*.ts\"",
    "prettier": "prettier --write",
    "prettier-fix": "prettier --write \"**/*.{js,jsx,json,ts,tsx,md,mdx,css,html,yml,yaml,scss,sass}\" && npm lint-fix",
    "types": "lerna run types --stream",
    "typescript": "lerna run typescript",
    "prepublish": "lerna run prepublish",
    "publish-canary": "lerna version prerelease --preid canary --force-publish && release --pre",
    "publish-stable": "lerna version --force-publish",
    "lint-staged": "lint-staged",
    "joy": "./packages/joy/dist/bin/joy"
  },
  "pre-commit": "lint-staged",
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "standard --fix",
      "git add"
    ],
    "*.tsx": [
      "prettier --write",
      "git add"
    ],
    "*.ts": [
      "prettier --write",
      "git add"
    ],
    "*.md": [
      "prettier --write",
      "git add"
    ]
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "packages/**/*.ts",
      "**/*.d.ts",
      "**/node_modules/**",
      "examples/**",
      "**/test/**",
      "**/.joy/**",
      "**/out/**"
    ],
    "globals": [
      "performance"
    ]
  },
  "devDependencies": {
    "lerna": "3.18.1",
    "prettier": "1.18.2",
    "react": "16.10.2",
    "react-dom": "16.10.2",
    "typescript": "3.6.4",
    "@babel/preset-flow": "7.0.0-beta.43",
    "babel-eslint": "10.0.3",
    "babel-jest": "24.9.0",
    "benchmark": "2.1.4",
    "cheerio": "0.22.0",
    "clone": "2.1.2",
    "coveralls": "3.0.6",
    "cross-env": "5.2.1",
    "express": "4.17.1",
    "fkill": "6.2.0",
    "flatten": "1.0.2",
    "flow-bin": "0.107.0",
    "get-port": "5.0.0",
    "husky": "3.0.5",
    "jest-cli": "24.9.0",
    "jest-junit": "8.0.0",
    "jest-puppeteer": "4.3.0",
    "lint-staged": "9.2.5",
    "micro": "9.3.4",
    "mkdirp": "0.5.1",
    "node-fetch": "2.6.0",
    "node-notifier": "5.4.3",
    "node-sass": "4.12.0",
    "nyc": "14.1.1",
    "puppeteer": "1.13.0",
    "rimraf": "3.0.0",
    "standard": "14.3.0",
    "taskr": "1.1.0",
    "wait-port": "0.2.2"
  }
}
